{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": ["node"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
    "allowJs": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],

  "baseUrl": ".",
  "paths": {
    "@helpers/*": ["helpers/*"],
    "@config/*": ["config/*"]
  }
}

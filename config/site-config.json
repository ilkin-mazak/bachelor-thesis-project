{
  "baseURL": "http://mystore.local",
  "paths": {
    "product": "/product",
    "checkout": "/checkout/"
  },
  "selectors": {
    "login": {
      "username": "#username",
      "password": "#password",
      "submitButton": "button[name='login']",
      "errorMessage": ".wc-block-components-notice-banner__content",
      "myAccountHeading": { "role": "heading", "name": "My account" }
    },
    "product": {
      "sizeDropdown": "#size",
      "colorDropdown": "#color",
      "viewCartButton": "a.wc-forward[href*='cart']",
      "addToCartButton": ".single_add_to_cart_button"
    },
    "cart": {
      "cartTotal": ".wc-block-components-totals-footer-item-tax-value",
      "proceedToCheckout": ".wc-block-cart__submit-button",
      "removeItemButton": ".wc-block-cart-item__remove-link",
      "quantityInput": ".wc-block-components-quantity-selector__input",
      "emptyCartMessage": {
        "role": "heading",
        "name": "Your cart is currently empty!"
      },
      "removalNotification": ".wc-block-components-notice__content"
    },

    "checkout": {
      "firstName": "#shipping-first_name",
      "lastName": "#shipping-last_name",
      "address": "#shipping-address_1",
      "city": "#shipping-city",
      "postcode": "#shipping-postcode",
      "placeOrderButton": ".wc-block-components-checkout-place-order-button",
      "orderConfirmation": "[data-testid='order-confirmation']",
      "editShippingAddress": {
        "container": ".wc-block-components-address-card",
        "button": ".wc-block-components-address-card__edit"
      },
      "orderReceivedHeading": { "role": "heading", "name": "Order received" }
    }
  },
  "products": {
    "defaultProduct": {
      "slug": "abominable-hoodie",
      "options": {
        "size": "S",
        "color": "Green",
        "expectedPrice": "69,00 €"
      }
    },
    "hoodie": {
      "slug": "abominable-hoodie",
      "options": {
        "size": "M",
        "color": "Blue",
        "expectedPrice": "69,00 €"
      }
    },
    "sweatshirt": {
      "slug": "hero-hoodie",
      "options": {
        "size": "L",
        "color": "Gray",
        "expectedPrice": "54,00 €"
      }
    }
  },
  "users": {
    "valid": {
      "username": "email1@email.com",
      "password": "password1"
    },
    "invalid": {
      "username": "wrong@email.com",
      "password": "wrong123"
    }
  },
  "testData": {
    "shippingDetails": {
      "firstName": "John",
      "lastName": "Doe",
      "address": "123 Main St",
      "city": "Vilnius",
      "postcode": "01234"
    }
  }
}

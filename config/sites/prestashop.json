{
  "baseURL": "http://localhost:8080",
  "paths": {
    "myAccount": "/en/",
    "product": "/en/",
    "loginPage": "/en/login",
    "checkout": "/en/order",
    "cart": "/en/cart",
    "orderReceived": "/en/order-confirmation"
  },
  "selectors": {
    "login": {
      "username": "#field-email",
      "password": "#field-password",
      "submitButton": "#submit-login",
      "errorMessage": ".alert.alert-danger",
      "myAccountHeading": { "role": "heading", "name": "Your account" },
      "signOutButton": ".logout.hidden-sm-down",
      "userInfo": ".user-info"
    },
    "product": {
      "sizeDropdown": "#group_1",
      "colorDropdown": "input.input-color[title='{color}']",
      "viewCartButton": ".shopping-cart a",
      "modal": {
        "proceedToCheckout": "a:has-text('PROCEED TO CHECKOUT')",
        "continueShopping": "button:has-text('Continue shopping')"
      },
      "addToCartButton": ".add-to-cart"
    },
    "cart": {
      "carticon": ".shopping-cart",
      "cartTotal": ".cart-total .value",
      "proceedToCheckoutButton": "a:has-text('PROCEED TO CHECKOUT')",
      "removeItemButton": ".remove-from-cart",
      "quantityInput": ".js-cart-line-product-quantity",
      "cartItemTitle": ".cart-item .product-name",
      "emptyCartMessage": { "role": "heading", "name": "Your cart is empty" },
      "removalNotification": ".cart-empty-warning"
    },
    "checkout": {
      "firstName": "#field-firstname",
      "lastName": "#field-lastname",
      "address": "#field-address1",
      "city": "#field-city",
      "postcode": "#field-postcode",
      "country": "#field-id_country",
      "state": "#field-id_state",
      "phone": "#field-phone",
      "placeOrderButton": "#payment-confirmation button",
      "orderConfirmation": ".order-confirmation",
      "editShippingAddress": {
        "container": ".address-item",
        "button": ".edit-address"
      },
      "orderReceivedHeading": {
        "role": "heading",
        "name": "Order confirmation"
      },
      "continueButton": "button:has-text('Continue')",
      "confirmAddressButton": "button[name='confirm-addresses']",
      "confirmShippingButton": "button[name='confirmDeliveryOption']",
      "termsCheckbox": "#conditions_to_approve\\[terms-and-conditions\\]"
    }
  },
  "products": {
    "defaultProduct": {
      "title": "men/1-1-hummingbird-printed-t-shirt.html",
      "options": {
        "size": "L",
        "color": "Black",
        "expectedPrice": "€23.14"
      }
    },
    "hoodie": {
      "title": "brown-bear-printed-sweater",
      "options": {
        "size": "L",
        "color": "Brown",
        "expectedPrice": "€65.00"
      }
    },
    "mug": {
      "title": "the-best-is-yet-to-come-framed-poster",
      "options": {
        "size": "40x60cm",
        "color": "White",
        "expectedPrice": "€34.80"
      }
    }
  },
  "users": {
    "valid": {
      "username": "email1@email.com",
      "password": "customerpassword111"
    },
    "invalid": {
      "username": "wrong@example.com",
      "password": "invalid123"
    }
  },
  "errorMessages": {
    "loginError": "Authentication failed."
  },
  "testData": {
